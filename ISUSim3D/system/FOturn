FOturn
{
    type            volFieldValue;
    libs            (fieldFunctionObjects);
    executeControl  timeStep;
    executeInterval 1;
    writeControl    timeStep;
    writeInterval   1;
    setFormat       probes;
    fields          ( U );
    operation       volAverage;
    regionType      cellZone;
    name            actuationDiskTurn;
    writeFields     false;
}

FOturnMAG
{
    type            volFieldValue;
    libs            (fieldFunctionObjects);
    executeControl  timeStep;
    executeInterval 1;
    writeControl    timeStep;
    writeInterval   1;
    setFormat       probes;
    fields          ( U );
    operation       volAverage;
    regionType      cellZone;
    name            actuationDiskTurn;
    writeFields     false;
    postOperation   mag;
}

