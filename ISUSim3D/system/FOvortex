FOvortex
{
    type            sets;
    libs            (sampling);
    executeControl  timeStep;
    executeInterval   100;
    writeControl    timeStep;
    writeInterval   100;
    setFormat       probes;
    fields          ( U );
    interpolationScheme cellPoint;
    setFormat       csv;
    sets
    (
        l01
        {
            type        uniform;
            axis        xyz;
            start       (-1.5 0.25 0);
            end         (1.5 0.25 0);
            nPoints     250;
        }
        l02
        {
            type        uniform;
            axis        xyz;
