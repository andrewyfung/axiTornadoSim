FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver		GAMG;
	tolerance       1e-06;
        relTol          0.01;
	smoother	GaussSeidel;
	nPreSweeps	0;
	nPostSweeps	2;
	nCellsInCoarsestLevel 50;
    }

    U
    {
	solver		PBiCGStab;
	preconditioner	DILU;
	tolerance	1e-06;
	relTol		0.1;
    }

    "(k|omega)"
    {
        solver          smoothSolver;
        smoother	symGaussSeidel;
        tolerance       1e-06;
        relTol          0.01;
    }

}

SIMPLE
{
	nNonOrthogonalCorrectors 1;
	consistent		yes;
	residualControl
	{
		p				1e-4;
		U				1e-5;
		"(k|omega)"		1e-4;
	}
}

relaxationFactors
{
    fields
    {
        p               0.9;
    }
    equations
    {
	U		0.8;
        "(k|omega)"     0.2;
    }
}

cache
{
    grad(U);
}



