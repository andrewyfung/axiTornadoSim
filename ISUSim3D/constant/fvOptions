FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvOptions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

disk1
{
    type            actuationDiskSource;
	active			on;
	
	actuationDiskSourceCoeffs
    {
        fields      (U);

        selectionMode   cellSet;
        cellSet         actuationDiskMain;
        diskDir         (0 -1 0);    // Orientation of the disk
        Cp              500;	// power coefficient
        Ct              500;  // Should be 400-500 Pa pressure drop across 
        diskArea        500;

		monitorMethod	points;
		monitorCoeffs
		{
			points
			(
				(0.35 2.3 0.05)
				(0.4 2.3 0.05)
				(0.45 2.3 0.05)
				(0.5 2.3 0.05)
				(0.55 2.3 0.05)
				//(0.35 2.7 0.05)
				//(0.45 2.7 0.05)
				//(0.55 2.7 0.05)
			);
		}
		
		variant			ts_main;
    }
	
}

disk2
{
    type            actuationDiskSource;
	active			on;
	
	actuationDiskSourceCoeffs
    {
        fields      (U);

        selectionMode   cellSet;
        cellSet         actuationDiskTurn;
        diskDir         (0 1 0);  // Switch for force method. (1 0 0) = constant/external dynamic, (0 1 0) = OF dynamic
        Cp              1;	// Angle Damping Factor
        Ct              15;  // Vane Angle
        diskArea        10;  // (Initial) Thrust

		monitorMethod	cellSet;
		monitorCoeffs
		{
			cellSet actuationDiskTurnMonitor;
		}
		
		variant			ts_turn;
    }
	
}
