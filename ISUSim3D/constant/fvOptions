FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvOptions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

disk1
{
    type            actuationDiskSource;
	active			on;
	
	actuationDiskSourceCoeffs
    {
        fields      (U);

        selectionMode   cellSet;
        cellSet         actuationDiskMain;
        diskDir         (0 -1 0);    // Not Used
        Cp              500;	// Not Used
        Ct              500;  // Not Used
        diskArea        500;	// Repurposed as disk force in N

		monitorMethod	points;
		monitorCoeffs // Not Used
		{
			points
			(
				(0.35 2.3 0.05)
				(0.4 2.3 0.05)
				(0.45 2.3 0.05)
				(0.5 2.3 0.05)
				(0.55 2.3 0.05)
				//(0.35 2.7 0.05)
				//(0.45 2.7 0.05)
				//(0.55 2.7 0.05)
			);
		}
		
		variant			ts_main;
    }
	
}

